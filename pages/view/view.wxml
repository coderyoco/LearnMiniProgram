<!--pages/view/view.wxml-->

<!-- 1.view基本使用 -->
<view class="box">
  <text>呵呵呵</text>
</view>

<!-- 2.hover-class的基本使用 -->
<view>
  <text>哈哈哈</text>
</view>

<view class="box1" hover-class="pressed" hover-stay-time="200">
  <text>呵呵呵</text>
</view>

<!-- 3.hover-stop-propagation -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" 
        hover-class="pressed" 
        hover-stay-time="200" hover-stop-propagation>
    <text>呵呵呵</text>
  </view>
</view>