<!--pages/image/image.wxml-->
<!-- 1.image的基本使用 -->
<!-- 重点:1.image可以写成单标签，也可以写成双标签
          2.image默认有自己的大小：320*240
          3.是一个行内块级元素（inline-block）
-->
<!-- <image/> -->

<!-- 2.src:本地路径(相对路径/绝对路径)/远程地址 -->
<image src="../../assets/test/test.jpg" />
<image src="/assets/test/test.jpg" />
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" />

<!-- 补充：相册中的图片 -->
<button bindtap="handleChooseAlbum">选择图片</button>
<image src="{{imagePath}}" />

<!-- bindload:监听图片加载完成 -->
<image wx:for="{{2}}" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" 
        bindload="handleImageLoad" 
        lazy-load/>

<!-- show-menu-by-longpress:长按识别小程序码 -->
<view>--------------------------</view>
<image mode="aspectFit" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" 
       show-menu-by-longpress/>