<!--pages/home/home.wxml-->
<text class="title">pages/home/home.wxml</text>
<button size="mini">按钮</button>

<!-- 1.navigator页面跳转 -->
<navigator url="/pages/detail/detail">跳转到详情页</navigator>
<!-- 2.navigator属性：open-type -->
<navigator url="/pages/detail/detail"
           open-type="redirect">
  跳转到详情页(redirect)
</navigator>
<navigator url="/pages/about/about"
           open-type="switchTab">
  跳转到关于页(switchTab)
</navigator>
<!-- 关闭所有页面后打开这个页面 -->
<navigator url="/pages/detail/detail"
           open-type="reLaunch">
  跳转到详情页(reLaunch)
</navigator>

<!-- 3.跳转过程中数据的传递 -->
<navigator url="/pages/detail/detail?name=why&age=18&height=1.88">跳转到详情页</navigator>
<view>{{title}}</view>

<!-- 4.通过代码进行页面的跳转 -->
<button size="mini" bind:tap="handlePushDetail">跳转到详情页</button>